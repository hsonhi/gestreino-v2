@model GRL_ENDERECO_PAIS
@{
    Layout = null;
}
<div class="card-header card-reader-radius bg-primary-pickled-bluewood">
    <h3 class="text-white mb-0">@ViewBag.Action país</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="handle-error alert alert-accent"
                 role="alert" style="display:none;">
                <div class="d-flex flex-wrap align-items-start">
                    <div class="mr-8pt">
                        <i class="fa-solid fa-shield-halved"></i>&nbsp;
                    </div>
                    <div class="flex"
                         style="min-width: 180px">
                        <span class="text-black-100">
                            <strong>Atenção!</strong> <span class="handle-error-message"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
                        @if (ViewBag.Action == "Adicionar")
                        {
                            using (Ajax.BeginForm("NewGRLEndPais", "administration", new AjaxOptions { HttpMethod = "POST", OnFailure = "handleFailure", OnSuccess = "handleSuccess", UpdateTargetId = "" }))
                            {
                                @Html.AntiForgeryToken()
                                <p>  <span><i class="fa fa-info-circle"></i> Os campos a vermelho são de caráter obrigatório!</span></p>

                                <div class="row">
                                    <label class="col-md-2 col-form-label required">Sigla</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.SIGLA, new { @class = "form-control form-control-sm", required = "" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label required">Nome</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.NOME, new { @class = "form-control form-control-sm", required = "" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label required">Código</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.CODIGO, new { @class = "form-control form-control-sm", required = "", @type = "number" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label">Indicativo</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.INDICATIVO, new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label">Nacionalide (Masculina)</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.NACIONALIDADE_MAS, new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label">Nacionalide (Feminina)</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.NACIONALIDADE_FEM, new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                                <div class="mt-1">
                                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary btn-sm" id="BtnSubmit">Submeter</button>
                                </div>
                            }
                        }
                        @if (ViewBag.Action == "Editar")
                        {
                            using (Ajax.BeginForm("UpdateGRLEndPais", "administration", new AjaxOptions { HttpMethod = "POST", OnFailure = "handleFailure", OnSuccess = "handleSuccess", UpdateTargetId = "" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.ID)
                                <p>  <span><i class="fa fa-info-circle"></i> Os campos a vermelho são de caráter obrigatório!</span></p>

                                <div class="row">
                                    <label class="col-md-2 col-form-label required">Sigla</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.SIGLA, new { @class = "form-control form-control-sm", required = "" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label required">Nome</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.NOME, new { @class = "form-control form-control-sm", required = "" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label required">Código</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.CODIGO, new { @class = "form-control form-control-sm", required = "", @type = "number" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label">Indicativo</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.INDICATIVO, new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label">Nacionalide (Masculina)</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.NACIONALIDADE_MAS, new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-2 col-form-label">Nacionalide (Feminina)</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.NACIONALIDADE_FEM, new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                                <div class="mt-1">
                                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary btn-sm" id="BtnSubmit">Submeter</button>
                                </div>
                            }
                        }
                        @if (ViewBag.Action == "Remover")
                        {
                            using (Ajax.BeginForm("DeleteGRLEndPais", "administration", new AjaxOptions { HttpMethod = "POST", OnFailure = "handleFailure", OnSuccess = "handleSuccess", UpdateTargetId = "" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.ID)

                                foreach (var i in ViewBag.bulkids)
                                {
                                    <input type="hidden" value="@i" name="ids[]" />
                                }
                                <p>Deseja remover este(s) item(s)? Esta operação não é reversível</p>

                                <div class="mt-1">
                                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary btn-sm" id="BtnSubmit">Submeter</button>
                                </div>
                            }
                        }
                    </div>