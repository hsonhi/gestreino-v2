@using Gestreino.Models
@using Gestreino.Classes
@model  GTAvaliado
@{Layout = null; }
<!-- page content -->
<div class="card-header card-reader-radius bg-primary-pickled-bluewood">
    <h3 class="text-white mb-0">Evolução do atleta</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="handle-error alert alert-accent"
                 role="alert" style="display:none;">
                <div class="d-flex flex-wrap align-items-start">
                    <div class="mr-8pt">
                        <i class="fa-solid fa-shield-halved"></i>&nbsp;
                    </div>
                    <div class="flex"
                         style="min-width: 180px">
                        <span class="text-black-100">
                            <strong>Atenção!</strong> <span class="handle-error-message"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <div id="container"></div>
            </div>
        </div>
        <div>
            <center>  <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">OK</button></center>
        </div>
</div>
<script>
    var colors = ['#FF0000'];
    $.ajax({
        type: "GET",
        url: "/gtmanagement/GetGTSocioEvolution",
        data: { "Id": @ViewBag.id,"sval": "@ViewBag.action"},
        cache: false,
        beforeSend: function () {
        },
        complete: function () {
        },
        success: function (data) {
            console.log(data)
            Highcharts.chart('container', {
                chart: {
                    backgroundColor: 'rgba(0,0,0,.00)',
                    borderRadius: 5,
                    borderWidth: 1,
                    borderColor: 'rgba(0,0,0,.01)',
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'line',
                     height: 330
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '@ViewBag.title'
                },
                subtitle: {
                    text: ''
                },
                xAxis: {
                    categories: ['Evolução','Evolução'],
                    labels: {
                        enabled: false
                    }
                },
                yAxis: {
                    min: 0,

                    title: {
                        text: ''
                    },
                },
                tooltip: {
                    valueSuffix: ''
                },
                legend: {
                    squareSymbol: false,
                    symbolHeight: 0,
                    symbolWidth: 0,
                    symbolRadius: 0
                },
                plotOptions: {
                    column: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            style: {
                                fontWeight: 500,
                            }
                        }
                    }
                },
                colors: colors,
                series:data
            });
        }
    });
</script>