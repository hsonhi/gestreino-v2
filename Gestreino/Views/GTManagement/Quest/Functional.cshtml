                                                        @Html.LabelFor(m => m.Posicao, new { @class = "col-md-4 col-form-label" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(x => Model.Posicao, new { @class = "form-control form-control-sm", required = "" })
                                                        </div>
                                                    </div>
                                                    <div class="row mt-2">
                                                        &nbsp;
                                                        @Html.LabelFor(m => m.Mao, new { @class = "col-md-4 col-form-label" })
