                                                        </div>
                                                        <div class="col-md-3">
                                                            <input name="Perna" type="checkbox" id="Perna2" value="1" @(Model.Perna == 1 ? "checked=" : "") /> <label for="Perna2">Direita</label>
                                                        </div>
