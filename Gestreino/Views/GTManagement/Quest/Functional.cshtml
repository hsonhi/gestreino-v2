                                                            <input name="Mao" type="checkbox" id="Mao2" value="1" @(Model.Mao == 1 ? "checked=" : "") /> <label for="Mao2">Direita</label>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        &nbsp;
                                                        @Html.LabelFor(m => m.Perna, new { @class = "col-md-4 col-form-label" })
