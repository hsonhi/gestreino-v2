@model Gestreino.Models.SettingsInst
@{
    ViewBag.Title = "Atualizar dados da aplicação";
}
<div class="right_col" role="main">
    <div class="row">
        <div class="col-lg-12">
            <div class="handle-error alert alert-accent mb-2"
                 role="alert" style="display: none;">
                <div class="d-flex flex-wrap align-items-start">
                    <div class="mr-8pt">
                        <i class="fa-solid fa-shield-halved"></i>&nbsp;
                    </div>
                    <div class="flex"
                         style="min-width: 180px">
                        <span class="text-black-100">
                            <strong>Atenção!</strong> <span class="handle-error-message"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @using (Ajax.BeginForm("UpdateInst", "gtmanagement", new AjaxOptions { HttpMethod = "POST", OnFailure = "handleFailure", OnSuccess = "handleSuccess", UpdateTargetId = "" }, new { @class = "" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ID)
        <div class="row">
            <div class="col-md-10 col-sm-12 ">
                <div class="animated flipInY">
                    <div class="tile-stats">
                        <h3 class="p-2">Atualizar dados da aplicação</h3>
                        <span class="p-4"><i class="fa fa-info-circle"></i> Os campos a vermelho são de caráter obrigatório!</span>
                        <div class="p-4">
                            <div class="row">
                                @Html.LabelFor(m => m.Sigla, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Sigla, new { @class = "form-control form-control-sm", required = "" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.Nome, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control form-control-sm", required = "" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.NIF, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.NIF, new { @class = "form-control form-control-sm" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.Telephone, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control form-control-sm", required = "", @type = "number" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.TelephoneAlternativo, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.TelephoneAlternativo, new { @class = "form-control form-control-sm", @type = "number" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.Fax, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Fax, new { @class = "form-control form-control-sm", @type = "number" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-sm", required = "", type = "email" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.CodigoPostal, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.CodigoPostal, new { @class = "form-control form-control-sm" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.URL, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.URL, new { @class = "form-control form-control-sm" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.Numero, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Numero, new {type="number", @class = "form-control form-control-sm" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.Rua, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Rua, new { @class = "form-control form-control-sm", required = "" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.Morada, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Morada, new { @class = "form-control form-control-sm", required = "" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.ENDERECO_PAIS_ID, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(x => Model.ENDERECO_PAIS_ID, Model.PAIS_LIST, "Selecionar uma opção", new { @class = "form-control form-control-sm", required = "" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.ENDERECO_CIDADE_ID, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(x => Model.ENDERECO_CIDADE_ID, Model.CIDADE_LIST, "Selecionar uma opção", new { @class = "form-control form-control-sm", required = "" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.ENDERECO_MUN_ID, new { @class = "col-md-2 col-form-label required" })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(x => Model.ENDERECO_MUN_ID, Model.MUN_LIST, "Selecionar uma opção", new { @class = "form-control form-control-sm", required = "" })
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-sm-2 text-right">
                                </div>
                                <div class="col-sm-6">
                                    <a href="@Url.Action("settings","administration")" class="btn btn-danger btn-sm">Cancelar</a>
                                    <button type="submit" class="btn btn-primary btn-sm" id="BtnSubmit">Submeter</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <h2>&nbsp;</h2>
</div>