@*model System.Web.Mvc.HandleErrorInfo*@
@{
    ViewBag.Title = "Acesso não autorizado";
}@{
    Layout = null;
}
<div class="right_col" role="main">
    <div class="row mb-24pt">
        <div class="col-2"></div>
        <div class="col-sm-12 col-md-8 col-lg-8">
            <div class="alert card">
                <div class="d-flex flex-wrap align-items-center">
                    <div class="flex"
                         style="min-width: 180px">
                        <h3 class="text-danger text-center mb-24pt mt-12pt"><i class="fa fa-key fa-2x"></i></h3>
                        <h4 class="text-center"><i class="fa fa-exclamation-triangle icon--left"></i> Acesso não autorizado</h4>
                        <h4 class="font-size-14pt m-2 text-center">Não tem permissão para aceder este conteúdo!</h4>
                        <center class="mb-2"><button class="btn btn-light mt-12pt" onclick="window.history.back()" title="Voltar à página anterior">Voltar à página anterior</button></center>
